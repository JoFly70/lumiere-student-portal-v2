NODE_ENV=production

# Supabase Configuration (Client-side - VITE_ prefix for Vite build)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Supabase Configuration (Server-side)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here

# Database Connection (Supabase Postgres)
# Get this from: Supabase Dashboard > Settings > Database > Connection string (Session pooler)
DATABASE_URL=postgresql://postgres.your-project:[YOUR_PASSWORD]@aws-0-region.pooler.supabase.com:6543/postgres

# Optional: Redis for enhanced rate limiting
# REDIS_URL=redis://username:password@host:port

# Optional: Sentry for error monitoring
# SENTRY_DSN=your_sentry_dsn_here
